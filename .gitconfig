[include]
    path = ~/.gitconfig.local

[alias]
    br = branch
    a = add
    c = commit
    ca = commit -a
    co = checkout
    d = diff
    ds = diff --staged
    dt = difftool -d 
    dts = difftool -d --staged 
    h = help
    graph = log --graph --date-order -C -M --pretty=format:\"%h [%ad] %C(yellow)%an %C(cyan reverse)%d%C(reset) %s\" --all --date=short
    pl = pull
    pr = pull --rebase
    ps = push
    s = status -sb
    slog = log --no-merges --date=iso --pretty='format:%h %C(green)[%cd] %C(yellow)%an %C(cyan reverse)%d%C(reset)%s'

[core]
    autocrlf = false
    editor = /usr/bin/vim
    excludesfile = ~/.gitignore
    pager = less -R
    quotepath = false

[color]
    branch = auto
    diff = auto
    grep = auto
    interactive = auto
    pager = true
    showbranch = auto
    status = auto
    ui = auto
	current = yellow reverse

[help]
    autocorrect = 10

[push]
	default = current
