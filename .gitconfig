[include]
    path = ~/.gitconfig.local

[color]
    ui = true
    diff = true
	quotepath = false

[color "branch"]
	current = cyan reverse
	local = yellow
	remote = magenta

; [color "diff"]
;     meta = yellow bold
;     frag = magenta bold
;     old = red reverse
;     new = green reverse
;     whitespace = white reverse

[color "status"]
	added = yellow
	changed = green
	untracked = cyan reverse
	branch = magenta

[core]
	autocrlf = false
	editor = /usr/bin/vim
	excludesfile = ~/.gitignore
	pager = less -R

[alias]
	br = branch
	brv = branch -av
	a = add
	c = commit
	ca = commit --amend
	cp = cherry-pick -x
	co = checkout
	d = diff
	ds = diff --staged
	dt = difftool -d 
	dts = difftool -d --staged 
	h = help
	l = log --date-order -C -M --pretty=format:\"%C(green)%h %C(reset)[%ad] %C(yellow)%an %C(cyan reverse)%d%C(reset) %s\" --date=short
	graph = log --graph --date-order -C -M --pretty=format:\"%C(green)%h %C(reset)[%ad] %C(yellow)%an %C(cyan reverse)%d%C(reset) %s\" --date=short
	pl = pull
	pr = pull --rebase
	ps = push
	s = status -sb
	ss = stash save -u
	contains = branch -r --contains
	subup = submodule update
	coclean = !git checkout . && git clean -f -d

[help]
	autocorrect = 30

[push]
	default = current

[difftool "sourcetree"]
	cmd = /Applications/DiffMerge.app/Contents/MacOS/DiffMerge --nosplash \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/DiffMerge.app/Contents/MacOS/DiffMerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
	trustExitCode = true
[mergetool "vimdiff3"]
	cmd = git_merge_wrapper3 \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
	trustExitCode = true
[mergetool]
	keepBackup = false
[merge]
	tool = vimdiff3
