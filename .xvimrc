set incsearch
set hlsearch
set ignorecase
set smartcase
set complete+=k
set nocursorcolumn
set nocursorline
set splitright
set blinkcursor

set clipboard=autoselect

nnoremap <Space>e :xccmd openQuickly<CR>
nnoremap <Space>w :write<CR>
nnoremap <C-[>    :noh<CR>
nnoremap <C-w>c     <C-w>q
nnoremap <C-w><C-l> <C-w>l
nnoremap <C-w><C-h> <C-w>h
nnoremap gf       <C-]>
nnoremap <C-i>    :xccmd goForwardInHistoryByCommand<CR>
nnoremap <C-t>    <C-o>
noremap <Space>h ^
noremap <Space>l $
noremap <C-h> <C-w>h
noremap <C-j> <C-w>j
noremap <C-k> <C-w>k
noremap <C-l> <C-w>l


" Comment out lines selected, Comment out current line
nnoremap <Space>c :xccmd commentAndUncommentCurrentLines<CR>
vnoremap <Space>c :xccmd commentAndUncommentCurrentLines<CR>

" show quick help for current word
" noremap <C-h> :xhelp<CR>

" search document for text cursor points to.
" noremap <C-H> :xccmd searchDocumentationForSelectedText<CR>

" switch between .h/.m
noremap <Space>s :xccmd jumpToNextCounterpart<CR>

